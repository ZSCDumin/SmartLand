<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.guotu.gt.mapper.PermissionRoleMapper">

    <select id="selectAll" resultType="com.guotu.gt.dto.PermissionRoleDTO">
        SELECT code, name, description
        FROM permission_role
        ORDER BY code
    </select>

    <select id="selectByName" parameterType="String" resultType="com.guotu.gt.dto.PermissionRoleDTO">
        SELECT code, name, description
        FROM permission_role
        WHERE name =#{name}
    </select>

    <select id="selectByCode" parameterType="Byte" resultType="com.guotu.gt.dto.PermissionRoleDTO">
        SELECT code, name, description
        FROM permission_role
        WHERE code =#{code}
    </select>

    <update id="updateByCode" parameterType="com.guotu.gt.dto.PermissionRoleDTO">
        UPDATE permission_role
        SET name =#{name},
        description =#{description}
        WHERE code =#{code}
    </update>

    <insert id="insert" parameterType="com.guotu.gt.dto.PermissionRoleDTO">
        INSERT INTO permission_role
        VALUES(#{code},
        #{name},
        #{description},
        1)
    </insert>

    <select id="selectFlagByCode" parameterType="Byte" resultType="Byte">
        select flag
        FROM permission_role
        WHERE code =#{code}
    </select>

    <delete id="deleteByCode" parameterType="Byte">
        DELETE FROM permission_role
        WHERE code =#{code}
    </delete>

</mapper>